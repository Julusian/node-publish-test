{
	"extends": "@tsconfig/node20",
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*"],
	"include": ["src/**/*"],
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"*": ["./node_modules/*"],
			"udev-generator": ["./src/main.ts"]
		},
		"types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
	}
}
